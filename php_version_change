sudo add-apt-repository ppa:ondrej/php # Press enter to confirm.

sudo apt-get update

sudo apt install php7.2 php7.2-common php7.2-cli

sudo apt install php7.2-curl php7.2-json php7.2-gd php7.2-mbstring php7.2-intl php7.2-bcmath php7.2-bz2 php7.2-readline php7.2-zip

sudo a2dismod php7.4

sudo a2enmod php7.2

sudo service apache2 restart

sudo update-alternatives --set php /usr/bin/php7.2

sudo update-alternatives --set phar /usr/bin/phar7.2

sudo update-alternatives --set phar.phar /usr/bin/phar.phar7.2

sudo update-alternatives --set phpize /usr/bin/phpize7.2

sudo update-alternatives --set php-config /usr/bin/php-config7.2
